        <item name="android:drawablePadding">6.0dip</item>
    </style>
    <style name="MenuEditDragBarIcon">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@color/edit_cancel_menu_text</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">2.0dip</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:paddingRight">2.0dip</item>
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDy">1.0</item>
