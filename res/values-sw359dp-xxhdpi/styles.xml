<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TouchWiz" parent="@*android:style/Theme.DeviceDefault.Wallpaper.NoTitleBar">
        <item name="android:dialogTheme">@*android:style/Theme.DeviceDefault.Dialog</item>
    </style>
    <style name="TouchWiz.ChooserActivity" parent="@*android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowBackground">@*android:color/transparent</item>
    </style>
    <style name="FolderEditBase">
        <item name="android:textSize">@dimen/open_folder_title_size</item>
        <item name="android:textColor">@color/open_folder_title_color</item>
        <item name="android:textColorHint">#ff7f7f7f</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/open_folder_title_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/folder_hint_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">30</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_holo_light</item>
    </style>
    <style name="FolderCreateText" parent="@style/FolderEditBase">
        <item name="android:textColor">@color/create_folder_title_color</item>
        <item name="android:background">@drawable/create_folder_title_bg</item>
        <item name="android:padding">@dimen/folder_create_text_padding</item>
    </style>
    <style name="HomeEditDragBarIcon">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@color/home_edit_bar_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">top|center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">2.0dip</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:paddingRight">2.0dip</item>
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:drawablePadding">0.0dip</item>
    </style>
    <style name="HomeIcon" parent="@style/BaseHomeIcon">
        <item name="android:textSize">14.0dip</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingTop">17.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:paddingBottom">3.0dip</item>
        <item name="android:lines">2</item>
        <item name="android:singleLine">false</item>
        <item name="android:drawablePadding">6.0dip</item>
    </style>
    <style name="HomeIcon.Folder" parent="@style/HomeIcon">
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:drawablePadding">3.0dip</item>
    </style>
    <style name="HotseatIcon" parent="@style/BaseHotseatIcon">
        <item name="android:textSize">14.0dip</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">0.0dip</item>
